<link rel="stylesheet" type="text/css" href="http://localhost/kimgt/skin/frontend/default/iwork/css/styles.css" media="all" />
<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews reviewall" id="customer-reviews">
    <?php if (count($_items)):?>
        <h5 class="rtitle1">レビュー一覧</h5>
        <?php echo $this->getChildHtml('toolbar') ?>
        
        <?php foreach ($_items as $_review):?>
            
            <div class="reviewc_left">
                <a href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->htmlEscape($_review->getTitle()) ?></a> <?php echo $this->__('審査: <span>%s</span>', $this->htmlEscape($_review->getNickname())) ?></div>
           
                <?php $_votes = $_review->getRatingVotes(); ?>
                <?php if (count($_votes)): ?>
                <div class="reviewc_right" >
                  
                        <?php foreach ($_votes as $_vote): ?>
                   <div>  総合評価:<br />
                                <div class="rating-box" >
                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                </div>
                       </div>
                        <?php endforeach; ?>
                    
                </div>
                <?php endif; ?>
                <div class="reviewc_p"><?php echo nl2br($this->htmlEscape($_review->getDetail())) ?><br /><br /></div>
            
        <?php endforeach; ?>
        
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
