<select name="sel_config_type" class="form-select required" id="sel_config_type" style="width:200px"> 		
 		{#foreach from=$configTypeList item=configType#} 
 		
 		{#if $configType['id'] == $defaultTypeId#}
 			<option value="{#$configType['id']#}" selected>{#$configType['name']#}</option>
 		{#else#}
 			<option value="{#$configType['id']#}">{#$configType['name']#}</option>
 		{#/if#}
 		{#/foreach#}

</select>	