/* The outer container of the options */
ul{margin:0px;}
.dk_options  ul
{
    background:#ffffff;
    font-size: 11px;
    padding:0px;
}
.dk_options li
{
    margin:0px;
    padding:0px;
    height:23px;
    text-indent:0em;
    list-style-type:none;
}
.dk_options a {
    padding: 5px 0px 0px 15px;
    font-size: 11px;
}
.dk_options li:last-child a {
    border-bottom: none;
}
.dk_options li:nth-child(odd) a
{
    background:url("../images/select.png");
    background-repeat: repeat-x;
    height:23px;
}
